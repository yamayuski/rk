{
  "name": "rk DevContainer",
  "image": "mirror.gcr.io/node:22-bookworm",
  "initializeCommand": "bash .devcontainer/initialize-command.sh",
  "postCreateCommand": "bash .devcontainer/post-create-command.sh",
  "remoteUser": "rk",
  "containerUser": "rk",
  "workspaceFolder": "/workspaces/rk",
  "mounts": [
    "source=/opt/rk,target=/opt/rk,type=bind,consistency=readonly"
  ],
  "containerEnv": {
    "NODE_EXTRA_CA_CERTS": "/opt/rk/rootCA.pem"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "upgradePackages": true,
      "username": "rk",
      "userUid": "${localEnv:RK_UID-1000}",
      "userGid": "${localEnv:RK_GID-1000}"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens",
        "DavidAnson.vscode-markdownlint",
        "denoland.vscode-deno"
      ],
      "settings": {
        "deno.enable": true,
        "deno.lint": true,
        "deno.codeLens.references": true,
        "deno.codeLens.test": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "denoland.vscode-deno"
      }
    },
    "jetbrains": {
      "extensions": [
        "deno",
        "org.jetbrains.plugins.github",
        "com.github.copilot"
      ]
    }
  }
}
